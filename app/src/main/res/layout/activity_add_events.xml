<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/drawerLayout"
    tools:context=".AddEventsActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdd"
            android:text="@string/btn_add"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- A CardView that contains a TextView -->
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_map"
            android:layout_gravity="center"
            card_view:cardCornerRadius="20dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:hint="address"

                android:textColor="@color/ivory_black"
                android:id="@+id/address"
                android:layout_weight="1">
            </EditText>

                <TextView
                    android:id="@+id/info_map"
                    android:alpha="0.8"
                    android:background="@drawable/rounded_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="Map Location"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    />



            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <EditText
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventName"
            android:hint="Event name"

            />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:id="@+id/noteDesc"
        android:hint="@string/hint"/>

    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:background="@color/ivory_black"
        android:alpha="0.5"
        android:layout_width="match_parent"
        card_view:cardBackgroundColor="@color/black"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/info_text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="XXX"
            android:gravity="center"
            android:textColor="@color/white"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:id="@+id/userlistView"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <!-- A CardView that contains a TextView -->
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:alpha="0.8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            card_view:cardCornerRadius="50dp"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_outer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                card_view:cardCornerRadius="50dp"
                card_view:cardElevation="10dp"
                android:layout_weight="1">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        card_view:shapeAppearanceOverlay="@style/RoundedCorner"
                       >
                    </ImageView>


                    <TextView
                        android:id="@+id/info_text5"
                        android:background="@color/ivory_black"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="XXX"
                        android:gravity="center"
                        android:textColor="@color/white"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <!-- A CardView that contains a TextView -->
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            card_view:cardCornerRadius="100dp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1">


            <TextView
                android:id="@+id/info_text2"
                android:alpha="0.8"
                android:background="@drawable/rounded_btn2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="XXX"
                android:gravity="center"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!--date time-->
    <!-- ///////////////////////////////////////////////////////////// -->

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_by_data_time"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardCornerRadius="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/text_date"
            android:background="@color/ivory_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"
            android:onClick="datePicker"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_weight="1"
            />


        <TextView
            android:id="@+id/text_time"
            android:background="@color/ivory_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="time"
            android:onClick="timePicker"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_weight="1"
            />
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ///////////////////////////////////////////////////////////// -->
    <!--date time-->


    <Button
        android:id="@+id/blurBtn"
        android:alpha="0.9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:background="@drawable/rounded_btn2"
        android:onClick="backClick"/>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="400px"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:alpha="0.8"
        app:menu="@menu/nav_menu"
        android:background="@drawable/rounded_menu"
        app:itemTextColor="@color/white"/>


</androidx.drawerlayout.widget.DrawerLayout>